<h1>Editing Track</h1>

<form action= <%= track_url(@track) %> method="post">
  <input type="hidden" name="_method" value="put">
  <%= auth_token %>
  <label for="track_album_id">Select Album</label>
  <select  name="track[album_id]", id="track_album_id">
    <% Album.all.each do |album| %>
    <option value="<%= album.id %>" <%= @track.album.name == album.name ? "selected" : "" %>> <%= album.name %></option>
    <% end %>
  </select><br>
  <label for="track_name">Track Name</label>
  <input type="text" name="track[name]" id="track_name" value = <%= @track.name %>><br>
  <input type="radio" name="track[track_type]", value="Bonus" <%= @track.track_type == "Bonus" ? "checked" : "" %> >Bonus<br>
  <input type="radio" name="track[track_type]", value="Regular" <%= @track.track_type == "Regular" ? "checked" : "" %>>Regular<br>
  <textarea name="track[lyrics]" rows="8" cols="80" id="lyrics"><%=@track.lyrics%></textarea><br>
  <input type="submit" value="Edit track">
</form>

<%= link_to 'Back', tracks_path %>
