<h1>New Album</h1>

<form action= <%= albums_url %> method="post">
  <%= auth_token %>
  <label for="album_band_id">Select Band</label>
  <select  name="album[band_id]", id="album_band_id">
    <% Band.all.each do |band| %>
    <option value="<%= band.id %>"> <%= band.name %></option>
    <% end %>
  </select><br>
  <label for="album_name">Album Name</label>
  <input type="text" name="album[name]" id="album_name"><br>
  <input type="radio" name="album[album_type]", value="Live">Live<br>
  <input type="radio" name="album[album_type]", value="Studio">Studio<br>
  <input type="submit" value="Create Album">
</form>

<%= link_to 'Back', albums_path %>
