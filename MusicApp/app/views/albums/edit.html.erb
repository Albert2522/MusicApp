<h1>Editing Album</h1>

<form action= <%= album_url(@album) %> method="post">
  <input type="hidden" name="_method" value="put">
  <%= auth_token %>
  <label for="album_band_id">Select Band</label>
  <select  name="album[band_id]", id="album_band_id">
    <% Band.all.each do |band| %>
    <option value="<%= band.id %>" <%= @album.band.name == band.name ? "selected" : "" %>> <%= band.name %></option>
    <% end %>
  </select><br>
  <label for="album_name">Album Name</label>
  <input type="text" name="album[name]" id="album_name", value = <%= @album.name %>><br>
  <input type="radio" name="album[album_type]", value="Live" <%= @album.album_type == "Live" ? "checked" : "" %>>Live<br>
  <input type="radio" name="album[album_type]", value="Studio" <%= @album.album_type == "Studio" ? "checked" : "" %>>Studio<br>
  <input type="submit" value="Edit Album">
</form>

<%= link_to 'Back', albums_path %>
